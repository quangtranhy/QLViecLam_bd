@{
    Layout = "_LayoutPrint";
    var record_id = 1;
}
@model IEnumerable<QLViecLam.Models.Admin.Manages.NhanKhau>
<br />
<br />

<table id="data_body" align="left" border="1" cellpadding="0" cellspacing="0" style="width:100.0%">
    <tr>
        <td style="width:2.66%">
            <p style="text-align:justify"><span><strong>STT</strong></span></p>
        </td>
        <td>
            <p style="text-align:justify"><span><strong>Họ Tên</strong></span></p>
        </td>
        <td>
            <p style="text-align:justify"><span><strong>Ngày sinh</strong></span></p>
        </td>
        <td>
            <p style="text-align:justify"><span><strong>CCCD</strong></span></p>
        </td>
        <td>
            <p style="text-align:justify"><span><strong>Tình trạng HĐKT</strong></span></p>
        </td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@(record_id++)</td>
            <td>@item.HoVaTen</td>
            <td>@item.NgayThangNamSinh</td>
            <td>@item.SoCCCD</td>
            <td>
                @if (@item.TinhTrangVL == "1")
                {
                    <p style="text-align:justify"><span><strong>Có việc làm</strong></span></p>
                }
                @if (@item.TinhTrangVL == "2")
                {
                    <p style="text-align:justify"><span><strong>Thất nghiệp</strong></span></p>
                }
                @if (@item.TinhTrangVL == "3")
                {
                    <p style="text-align:justify"><span><strong>Không tham gia HĐKT</strong></span></p>
                }
            </td>
        </tr>
    }

</table>
