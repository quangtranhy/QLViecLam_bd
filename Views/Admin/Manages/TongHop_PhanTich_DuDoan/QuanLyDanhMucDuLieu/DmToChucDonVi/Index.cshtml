@{
    ViewData["Title"] = "Đơn vị";
    int record_id = 1;
}
@model IEnumerable<QLViecLam.Models.Admin.Systems.DmDonvi>

@section custom_style{
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
    <link rel="stylesheet" type="text/css" href="~/NewFolder/test.css" />
}

@section custom_script{
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script>
        // $(document).ready(function () {
        //     TableManaged.init();
        // });


    </script>
}

<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                Danh sách<small>Đơn vị</small><br />
            </h3>
        </div>
    </div>
    <hr />
    <div class="card-body">
        <table class="table table-striped table-bordered table-hover" id="sample_3">
            <thead>
                <tr class="text-center">
                    <th>STT</th>
                    <th>Tên Đơn vị</th>
                    <th>Mã Đơn vị</th>
                    <th>Khu vực hành chính</th>
                    <th>Phân Loại</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center" width="5%">@(record_id++)</td>
                            <td style="font-weight: bold; color: blue; ">
                                @item.TenDv
                            </td>
                            <td style="font-weight:bold">@item.MaDonVi</td>
                            <td>@item.KhuVucHanhChinh</td>
                            <td style="text-align:center">
                                @if (item.PhanLoaiTaiKhoan == "SD")
                                {
                                    <span style="width: 150px;">
                                        <span class="label font-weight-bold label-lg label-light-info label-inline">Sử dụng</span>
                                    </span>
                                }
                                else
                                {
                                    <span style="width: 150px;">
                                        <span class="label font-weight-bold label-lg label-light-success label-inline">Tổng hợp</span>
                                    </span>
                                }
                            </td>
                            <td>
                                <button type="button" class="btn btn-sm btn-clean btn-icon" title="Chỉnh sửa" data-target="#Edit_Modal" data-toggle="modal" onclick="SetEdit('@item.Id')">
                                    <i class="icon-lg la la-edit text-primary"></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-clean btn-icon" title="Xóa" data-toggle="modal" data-target="#Delete_Modal" onclick="SetDelete('@item.Id')">
                                    <i class="icon-lg la la-trash text-danger"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    @await Html.PartialAsync("~/Views/Admin/Manages/TongHop_PhanTich_DuDoan/QuanLyDanhMucDuLieu/DmToChucDonVi/Modal.cshtml")
</div>
