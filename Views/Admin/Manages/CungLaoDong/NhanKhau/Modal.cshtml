<!--Import Modal-->
<form asp-controller="NhanKhau" asp-action="Import" method="post" enctype="multipart/form-data">
    <div class="modal fade" id="Import_Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="card-label text-dark">
                        Đồng ý nhập dữ liệu???
                    </h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i aria-hidden="true" class="ki ki-close"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row text-left">
                        <input type="file" name="formFile" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default font-weight-bold" data-dismiss="modal">Hủy thao tác</button>
                    <button type="submit" class="btn btn-primary font-weight-bold">Đồng ý</button>
                </div>
            </div>
        </div>
    </div>
</form>


<!--Delete Modal-->
<form asp-controller="NhanKhau" asp-action="Delete" method="post" enctype="multipart/form-data">
    <div class="modal fade" id="Delete_Modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="card-label text-dark">
                        Đồng ý xóa???
                    </h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i aria-hidden="true" class="ki ki-close"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row text-left">
                        <input hidden id="Id_delete" name="Id_delete" />
                        <input hidden id="huyen" name="huyen" value="@ViewData["huyen"]" />
                        <input hidden id="xa" name="xa" value="@ViewData["xa"]" />
                        <input hidden id="kydieutra" name="kydieutra" value="@ViewData["kydieutra"]" />
                        <input hidden id="ttvl" name="ttvl" value="@ViewData["ttvl"]" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default font-weight-bold" data-dismiss="modal">Hủy thao tác</button>
                    <button type="submit" class="btn btn-primary font-weight-bold">Đồng ý</button>
                </div>
            </div>
        </div>
    </div>
</form>
<script>

    function Create() {
        var xa = $('#xa').val();
        if (xa == '') {
            toastr.warning('Bạn chưa chọn xã');
        } else {
            var huyen = $('#huyen').val();
            var kydieutra = $('#kydieutra').val();
            var ttvl = $('#ttvl').val();
            var url = '/NhanKhau/Create?xa=' + xa + '&huyen=' + huyen + '&kydieutra=' + kydieutra + '&ttvl=' + ttvl;
            window.location.href = url;
        }
    }

    function BcChiTiet() {
        var xa = $('#xa').val();
        if (xa == '') {
            toastr.warning('Bạn chưa chọn xã');
        } else {
            var huyen = $('#huyen').val();
            var kydieutra = $('#kydieutra').val();
            var url = '/NhanKhau/BcChiTiet?xa=' + xa + '&huyen=' + huyen + '&kydieutra=' + kydieutra;
            window.location.href = url;
        }
    }

    function SetDelete(Id) {
        document.getElementById("Id_delete").value = Id;
    }

</script>
