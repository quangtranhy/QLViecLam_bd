@{
    int record_id = 1;
}
@model IEnumerable<QLViecLam.ViewModels.Admin.Manages.TongHop_PhanTich_DuDoan.ThongTinCung_Cau.VM_Count_HoGiaDinh>

@section custom_style{
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
    <link rel="stylesheet" type="text/css" href="~/NewFolder/test.css" />
}

@section custom_script{
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script>
        $(document).ready(function () {
            TableManaged.init();
        });
    </script>
}

<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                Danh sách<small> Quản lý người lao động theo hộ gia đình</small><br />
            </h3>
        </div>
    </div>
    <hr />
    <div class="card-body">
        <table class="table table-striped table-bordered table-hover" id="sample_3">
            <thead>
                <tr class="text-center">
                    <th>STT</th>
                    <th>Số định danh hộ gia đình</th>
                    <th>Thành viên trong gia đình</th>
                    <th>Số lượng thành viên</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center" width="5%">@(record_id++)</td>
                            <td >@item.SoDinhDanhHoGD</td>
                            <td >@item.ThanhVien</td>
                            <td >@item.Count</td>
                            <td>
                                <a type="button" class="btn btn-sm btn-clean btn-icon" title="Chỉnh sửa" asp-controller="HoGiaDinh" asp-action="Detail" asp-route-sohogd="@item.SoDinhDanhHoGD">
                                    <i class="icon-lg la la-clipboard-list text-success  icon-2x"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</div>
