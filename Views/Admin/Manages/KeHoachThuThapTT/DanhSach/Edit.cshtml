<div class="card card-custom">
    <div class="card-header">
        <div class="card-title">
            <h3 class="card-label">
                @ViewData["Title"]
                <span class="d-block text-muted pt-2 font-size-sm">
                    Chỉnh sửa kế hoạch thu thập thông tin
                </span>
            </h3>
        </div>
    </div>
    <!--begin::Form-->
    <form asp-controller="KeHoachThuThap" asp-action="Update" method="post">
        <div class="card-body">
            @await Html.PartialAsync("~/Views/Admin/Manages/KeHoachThuThapTT/DanhSach/FormThongTin.cshtml")
        </div>
        <div class="card-footer" style="text-align:center">
            <a asp-controller="KeHoachThuThap" asp-action="Index" class="btn btn-danger">
                <i class="la la-reply"></i>Quay lại
            </a>&ensp;
            <button type="reset" class="btn btn-secondary"><i class="la la-refresh"></i>Nhập lại</button>&ensp;
            <button type="submit" class="btn btn-primary mr-2"><i class="la la-check"></i>Hoàn thành</button>
        </div>
    </form>
    <!--end::Form-->
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}