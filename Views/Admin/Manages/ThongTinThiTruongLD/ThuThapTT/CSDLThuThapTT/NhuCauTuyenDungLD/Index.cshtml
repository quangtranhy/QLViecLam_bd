@{
    ViewData["Title"] = "Cơ sở dữ liệu thông tin nhu cầu tuyển dụng lao động của người sử dụng lao động";
    int record_id = 1;
    var Xa = (IEnumerable<QLViecLam.Models.Admin.Systems.HeThongChung.DmHanhChinh>)ViewData["Xa"]!;
    var Huyen = (IEnumerable<QLViecLam.Models.Admin.Systems.HeThongChung.DmHanhChinh>)ViewData["Huyen"]!;
}
@model IEnumerable<QLViecLam.Models.Admin.Manages.ThongTinThiTruongLD.TuyenDung>

@section custom_style {
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}

@section custom_script {
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script>
        $(document).ready(function () {
            TableManaged.init();
        });

        $(function () {
            $('#tungay,#denngay').change(function () {
                var current_path_url = '/NhuCauTuyenDungLD?';
                var tungay = '&tungay=' + $('#tungay').val();
                var denngay = '&denngay=' + $('#denngay').val();
                var url = current_path_url + tungay + denngay;
                window.location.href = url;
            })
        });
    </script>

}

<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                Danh sách<small>Cơ sở dữ liệu thông tin nhu cầu tuyển dụng lao động của người sử dụng lao động</small><br />
            </h3>
        </div>
        <div class="card-toolbar">
        </div>
    </div>
    <hr />
    <div class="card-body">
        <div class="row">

            <div class="col-xl-4">
                <div class="form-group fv-plugins-icon-container">
                    <label style="font-weight:bold; color:blue">Từ ngày</label>
                    <input type="date" id="tungay" name="tungay" value="@ViewData["tungay"]" class="form-control" />
                </div>
            </div>
            <div class="col-xl-4">
                <div class="form-group fv-plugins-icon-container">
                    <label style="font-weight:bold; color:blue">Đến ngày</label>
                    <input type="date" id="denngay" name="denngay" value="@ViewData["denngay"]" class="form-control" />
                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered table-hover" id="sample_3">
            <thead>
                <tr style="text-align:center">
                    <th>Stt</th>
                    <th>Tên doanh nghiệp</th>
                    <th>Nội dung</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(record_id++)</td>
                            <td>@item.TenCongTy</td>
                            <td>@item.NoiDung</td>
                            <td>
                                <a type="button" class="btn btn-sm btn-clean btn-icon" title="Xem thông tin" asp-controller="NhuCauTuyenDungLD" asp-action="Detail" asp-route-Id="@item.Id">
                                    <i class="icon-lg far fa-eye text-primary icon-2x"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-clean btn-icon" title="In hồ sơ" data-target="#Print_Modal" data-toggle="modal" onclick="SetPrint('@item.Id')">
                                    <i class="icon-lg la flaticon2-print  text-primary"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    @await Html.PartialAsync("~/Views/Admin/Manages/ThongTinThiTruongLD/ThuThapTT/CSDLThuThapTT/NhuCauTuyenDungLD/Modal.cshtml")
</div>
