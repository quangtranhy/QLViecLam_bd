@model IEnumerable<QLViecLam.Models.Admin.Manages.ViTriTuyenDung>

@{
    int record_id = 1;
}
<div class="mb-3 font-weight-bold font-size-lg">
    <label style="color: blue; text-decoration-line: underline; font-weight: bold">Thông tin vị trí tuyển dụng</label>
</div>
<div class="card card-custom" style="border: 1px solid #60aee4;">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
            </h3>
        </div>
        <div class="card-toolbar">
            
        </div>
    </div>
    <hr />
    <div class="card-body" id="frm_data">
        <table class="table table-striped table-bordered table-hover" id="datatable_4">
            <thead>
                <tr style="text-align:center">
                    <th>Stt</th>
                    <th>Tên vị trí tuyển dụng</th>
                    <th>Số lượng</th>
                    <th>Yêu cầu kinh nghiệm</th>
                    <th>Hình thức làm việc</th>
                    <th>Mức lương</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="text-align:center">@(record_id++)</td>
                                <td class="active">@item.Name</td>
                                <td>@item.Soluong</td>
                                <td>@item.YeuCauKn</td>
                                <td>@item.HinhThuclv</td>
                                <td>@item.MucLuong</td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
        <!--end: Datatable-->
    </div>
</div>