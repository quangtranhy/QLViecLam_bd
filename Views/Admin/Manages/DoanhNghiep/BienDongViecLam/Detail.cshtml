@{
    ViewData["Title"] = "Biến động việc làm";
    int record_id = 1;
}


  @model IEnumerable<QLViecLam.Models.Admin.Manages.BienDong>

@section custom_style {
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}

@section custom_script {
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script>
        $(document).ready(function () {
            TableManaged.init();
        });


    </script>
}

<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
               Chi tiết <small> Biến động việc làm - @ViewData["congty"]</small><br />
            </h3>
        </div>

    </div>
    <hr />
    <div class="row">
        <div class="card-body">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr class="text-center">
                         <th>Stt</th>
                        <th>Phân loại</th>
                        <th>Mô tả</th>
                        <th>Số lượng</th>
                        <th>Thời điểm</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@(record_id++)</td>
                                <td>@item.PhanLoai</td>
                                <td>
                                    @if(item.PhanLoai == "baotang")
                                    {
                                        <span>Báo tăng</span>
                                    }
                                    @if (item.PhanLoai == "baogiam")
                                    {
                                        <span>Báo giảm</span>
                                    }
                                    @if (item.PhanLoai == "tamdung")
                                    {
                                        <span>Tạm dừng</span>
                                    }
                                    @if (item.PhanLoai == "ketthuctamdung")
                                    {
                                        <span>Kết thúc tạm dừng</span>
                                    }
                                    @if (item.PhanLoai == "khongbiendong")
                                    {
                                        <span>không biến động</span>
                                    }
                                </td>
                                <td>@item.MoTa</td>
                                <td>@item.SoLuong</td>
                                <td>@item.ThoiDiem</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

