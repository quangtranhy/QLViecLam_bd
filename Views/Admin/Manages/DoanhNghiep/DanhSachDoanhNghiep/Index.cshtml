@{
    int record_id = 1;

}
@model IEnumerable<QLViecLam.Models.Admin.Manages.Company>

@section custom_style {
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}

@section custom_script {
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script>
        $(document).ready(function () {
            TableManaged.init();
        });


    </script>
}

<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                Danh sách <small> Người lao động</small><br />
            </h3>
        </div>
        <div class="card-toolbar">
            <td>
                <a class="btn btn-sm btn-clean btn-icon" asp-controller="NguoiLaoDong" asp-action="BcChiTiet" title="Báo cáo chi tiết">
                    <i class="icon-lg la flaticon2-print text-success icon-2x"></i>
                </a>
            </td>
        </div>
    </div>
    <hr />
    <div class="card-body">
        <table class="table table-striped table-bordered table-hover" id="sample_3">
            <thead>
                <tr style="text-align:center">
                    <th>Stt</th>
                    <th>Mã DKKD</th>
                    <th>Tên doanh nghiệp</th>
                    <th>Địa chỉ</th>
                    <th>Điện thoại</th>
                    <th>Tình trạng</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(record_id++)</td>
                            <td>@item.MaSoDn</td>
                            <td>@item.Name</td>
                            <td>@item.Tinh</td>
                            <td>@item.Phone</td>
                            <td>
                                @if (item.TinhTrangXacThuc == true)
                                {
                                    <i class="fa fa-check text-success text-active"></i>
                                }
                                else
                                {
                                    <i class="fa fa-close text-denger text-active"></i>
                                }
                            </td>
                            <td>
                                <a class="btn btn-sm btn-clean btn-icon" asp-controller="DoanhNghiep" asp-action="Detail" asp-route-user="@item.User" title="Xem thông tin">
                                    <i class="icon-lg far fa-eye text-success icon-2x"></i>
                                </a>
                                <a class="btn btn-sm btn-clean btn-icon" asp-controller="NhuCauTuyenDung" asp-action="Index" asp-route-user="@item.User" title="Tin tuyển dụng">
                                    <i class="icon-lg fas fa-briefcase-medical text-primary icon-1.8x"></i>
                                </a>
                                
                            </td>

                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
