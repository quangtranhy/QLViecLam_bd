<!--begin::Body-->
<body id="kt_body" class="header-fixed header-mobile-fixed subheader-enabled subheader-fixed aside-enabled aside-fixed aside-minimize-hoverable page-loading">
    <!--begin::Main-->
    <div class="d-flex flex-column flex-root">
        <!--begin::Login-->
        <div class="login login-3 login-signin-on d-flex flex-row-fluid" id="kt_login">
            <div class="d-flex flex-center bgi-size-cover bgi-no-repeat flex-row-fluid" style="background-image: url(Admin/assets/media/bg/bg-9.jpg); ">
                <div class="login-form text-center text-white p-7 position-absolute overflow-hidden"
                     style="position: absolute; box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5); overflow: hidden; color: #000; background: #4069f1f0; ">
                    <!--begin::Login Header-->
                    <div class="d-flex flex-center mb-10">
                        <img src="~/Admin/FileUpload/Logo/logoLDTBXH.png" class="max-h-150px"
                             alt="GIẢI PHÁP QUẢN LÝ VIỆC LÀM" />
                    </div>
                    <!--end::Login Header-->
                    <!--begin::Login Sign in form-->
                    <div class="login-signin">
                        <div class="mb-10">
                            <h1 style="font-weight: bold; color: black; font-size: 30px; ">
                                ĐĂNG KÝ
                            </h1>
                            <p class="opacity-60 font-weight-bold">Nhập thông tin doanh nghiệp</p>

                        </div>

                        <form asp-controller="Auth" asp-action="Store" method="POST" accept-charset="UTF-8" class="form text-left fv-plugins-bootstrap fv-plugins-framework" id="DangKylForm">

                            <div class="form-group mb-5 fv-plugins-icon-container">
                                <input class="form-control h-auto form-control-solid py-4 px-8" type="text" placeholder="Tên công ty" name="name" value="@ViewData["name"]">
                                <div class="error-message" style="color: #a30606e3;"></div>
                            </div>
                            <div class="form-group mb-5">
                                <input class="form-control h-auto form-control-solid py-4 px-8" type="text" placeholder="Mã số DKKD (* Không thể thay đổi sau này )" name="masodn" value="@ViewData["masodn"]">
                                <div class="error-message" style="color: #a30606e3;"></div>
                            </div>
                            <div class="form-group mb-5 fv-plugins-icon-container">
                                <input class="form-control h-auto form-control-solid py-4 px-8" type="email" placeholder="Email Address (* Không thể thay đổi sau này)" name="email" value="@ViewData["email"]">
                                <div class="error-message" style="color: #a30606e3;">@ViewData["emaiError"]</div>
                            </div>
                            <div class="form-group mb-5 fv-plugins-icon-container">
                                <input class="form-control h-auto form-control-solid py-4 px-8" type="password" placeholder="Mật khẩu" name="password" value="@ViewData["password"]">
                                <div class="error-message" style="color: #a30606e3;"></div>
                            </div>
                            <div class="form-group mb-5 fv-plugins-icon-container">
                                <input class="form-control h-auto form-control-solid py-4 px-8" type="password" placeholder="Xác nhận lại mật khẩu" name="confirm_password" value="@ViewData["password"]">
                                <div class="error-message" style="color: #a30606e3;"></div>
                            </div>
                            <div class="form-group mb-5 fv-plugins-icon-container">
                                <div class="checkbox-inline">
                                    <label class="checkbox m-0">
                                        <input type="checkbox" name="agree">
                                        <span></span>I Agree
                                        <a href="#" class="font-weight-bold ml-1">terms and conditions</a>.
                                    </label>
                                </div>
                                <div class="error-message" id="check_agree" style="color: #a30606e3;"> </div>
                            </div>
                            <div class="form-group d-flex flex-wrap flex-center mt-10">
                                <button class="btn btn-primary font-weight-bold px-9 py-4 my-3 mx-2">Đăng ký</button>
                                <a onclick="history.back()" class="btn btn-light-primary font-weight-bold px-9 py-4 my-3 mx-2">Quay lại</a>
                            </div>
                            <div></div>
                        </form>

                    </div>
                    <!--end::Login Sign in form-->
                </div>
            </div>
        </div>
        <!--end::Login-->
    </div>
    <!--end::Main-->
    <!--begin::Global Config(global config for global JS scripts)-->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var form = document.getElementById('DangKylForm');
            form.addEventListener('submit', function (event) {
                var valid = true;

                // Kiểm tra trường 'name'
                var name = document.getElementsByName('name')[0];
                var nameError = name.nextElementSibling;
                if (!name.value.trim()) {
                    nameError.textContent = 'Tên công ty không được để trống.';
                    valid = false;
                } else {
                    nameError.textContent = '';
                }

                // Kiểm tra trường 'dkkd'
                var dkkd = document.getElementsByName('masodn')[0];
                var dkkdError = dkkd.nextElementSibling;
                if (!dkkd.value.trim()) {
                    dkkdError.textContent = 'Mã số đăng ký kinh doanh không được để trống.';
                    valid = false;
                } else {
                    dkkdError.textContent = '';
                }

                // Kiểm tra trường 'email'
                var email = document.getElementsByName('email')[0]; // Đảm bảo tên trường phải giống với tên trong form
                var emailError = email.nextElementSibling;
                if (!email.value.trim()) {
                    emailError.textContent = 'Email không được để trống.';
                    valid = false;
                } else {
                    emailError.textContent = '';
                }

                // Kiểm tra trường 'password'
                var password = document.getElementsByName('password')[0];
                var passwordError = password.nextElementSibling;
                if (!password.value.trim()) {
                    passwordError.textContent = 'Mật khẩu không được để trống.';
                    valid = false;
                } else {
                    passwordError.textContent = '';
                }

 
                var confirmPassword = document.getElementsByName('confirm_password')[0];
                var confirmPasswordError = confirmPassword.nextElementSibling;

                // Kiểm tra xem trường xác nhận mật khẩu có trống không
                if (!confirmPassword.value.trim()) {
                    confirmPasswordError.textContent = 'Xác nhận mật khẩu không được để trống.';
                    valid = false;
                }

                // Kiểm tra xem mật khẩu và mật khẩu xác nhận có khớp không
                else if (password.value != confirmPassword.value) {
                    confirmPasswordError.textContent = 'Mật khẩu xác nhận không khớp.';
                    valid = false;
                } else {
                    confirmPasswordError.textContent = '';
                }

                // Kiểm tra phần 'I Agree'
                var agree = document.getElementsByName('agree')[0];
                var agreeError = document.getElementById('check_agree'); // Truy cập trực tiếp phần tử bằng ID
                if (!agree.checked) {
                    agreeError.textContent = 'Bạn phải đồng ý với các điều khoản và điều kiện.';
                    valid = false;
                } else {
                    agreeError.textContent = '';
                }

                // Nếu có lỗi, ngăn chặn form được submit
                if (!valid) {
                    event.preventDefault();
                }
            });
        });
    </script>

