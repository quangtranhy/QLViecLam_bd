﻿@{
    ViewData["Title"] = "Nhóm chức năng";
    int record_id = 1;

}
@model IEnumerable<QLViecLam.ViewModels.Admin.Systems.VM_NhomTkpq_ChucNang>


@section custom_style {
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="~/Admin/assets/datatables/bootstrap/dataTables.css" />
}

@section custom_script {
    <script type="text/javascript" src="~/Admin/assets/datatables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/Admin/assets/datatables/bootstrap/dataTables.bootstrap.js"></script>
    <script src="~/Admin/assets/datatables/scripts/table-managed.js"></script>
    <script>
        $(document).ready(function () {
            TableManaged.init();
        });

    </script>
}

<div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                Danh sách <small>Nhóm chức năng</small><br />
            </h3>
        </div>
        <div class="card-toolbar">
            <td>
                <a onclick="history.back()" class="btn btn-danger mr-5"><i class="fa fa-reply"></i>&nbsp;Quay lại</a>
            </td>
        </div>
    </div>
    <hr />

    <div class="card-body">
        <table class="table table-striped table-bordered table-hover ">
            <thead>
                <tr class="text-center">
                    <th rowspan="2">STT</th>
                    <th rowspan="2">Tên chức năng</th>
                    <th colspan="3">Phân quyền</th>
                    <th rowspan="2" style="border-left-width: 1px">Thao tác</th>
                </tr>
                <tr>
                    <th width="10%">Xem hồ sờ</th>
                    <th width="10%">Thay đổi</th>
                    <th width="10%">Gửi/duyệt hồ sơ</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(record_id++)</td>
                            <td>@item.TenChucNang</td>
                            <td>
                                @if (item.DanhSach == true)
                                {
                                    <i class="la fa-check text-primary icon-2x"></i>
                                }
                                else
                                {
                                    <i class="la fa-times-circle text-danger icon-2x"></i>
                                }
                            </td>
                            <td>
                                @if (item.ThayDoi == true)
                                {
                                    <i class=" la fa-check text-primary icon-2x"></i>
                                }
                                else
                                {
                                    <i class="la fa-times-circle text-danger icon-2x"></i>
                                }
                            </td>
                            <td>
                                @if (item.HoanThanh == true)
                                {
                                    <i class="la fa-check text-primary icon-2x"></i>
                                }
                                else
                                {
                                    <i class="la fa-times-circle text-danger icon-2x"></i>
                                }
                            </td>
                            <td>
                                <button type="button" class="btn btn-sm btn-clean btn-icon" title="Chỉnh sửa" data-target="#PhanQuyen_Modal" data-toggle="modal" onclick="SetPhanQuyen('@item.Id')">
                                    <i class="icon-lg la la-edit text-primary icon-2x"></i>
                                </button>
                            </td>
                        </tr>


                    }
                }
            </tbody>
        </table>
    </div>
    @await Html.PartialAsync("~/Views/Admin/Systems/HeThongChung/NhomChucNang/Modal.cshtml")
</div>
